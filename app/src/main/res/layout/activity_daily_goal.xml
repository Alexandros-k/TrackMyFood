<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:background="@color/modernTheme"
    tools:context="com.example.alex.myapplication.DailyGoalActivity">

    <EditText
        android:id="@+id/calid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appBarLayout"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="23dp"
        android:ems="10"
        android:hint="enter target calories"
        android:inputType="number"
        android:textColor="@color/colorText"
        android:textColorHint="@color/colorText"
        tools:layout_editor_absoluteX="41dp"
        tools:layout_editor_absoluteY="40dp" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button"
        android:layout_below="@+id/button"
        android:layout_marginTop="20dp"
        android:text="TextView"
        android:gravity="left"
        android:textColor="@color/colorText" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView24"
        android:layout_alignRight="@+id/textView24"
        android:layout_below="@+id/textView24"
        android:layout_marginTop="19dp"
        android:text="TextView"

        android:textColor="@color/colorText" />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView25"
        android:layout_alignRight="@+id/textView25"
        android:layout_below="@+id/textView25"
        android:layout_marginTop="22dp"
        android:text="TextView"
        android:gravity="left"
        android:textColor="@color/colorText" />

    <TextView
        android:id="@+id/textView27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView26"
        android:layout_alignStart="@+id/textView26"
        android:layout_below="@+id/textView26"
        android:layout_marginTop="17dp"
        android:text="TextView"
        android:gravity="left"
        android:textColor="@color/colorText" />

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">


        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar2"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorAppBar"
            />


    </android.support.design.widget.AppBarLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/calid"
        android:layout_alignLeft="@+id/calid"
        android:layout_alignRight="@+id/calid"
        android:layout_alignStart="@+id/calid"
        android:layout_below="@+id/calid"
        android:background="@color/colorAppBar"
        android:text="Calculate"

        android:textColor="@color/modernTheme" />


</RelativeLayout>
